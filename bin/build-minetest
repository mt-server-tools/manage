#!/bin/bash

NUMPROCESSORS=$(cat /proc/cpuinfo | grep -P '^processor\s*:' -c)

# Build minetest from source

sudo apt-get update && sudo apt-get install git cmake build-essential # TODO add the other dependencies

sudo apt-get install build-essential cmake git libirrlicht-dev libbz2-dev libgettextpo-dev libfreetype6-dev libpng12-dev libjpeg-dev libxxf86vm-dev libgl1-mesa-dev libsqlite3-dev libogg-dev libvorbis-dev libopenal-dev libhiredis-dev libcurl3-dev libncurses5-dev

adduser minetest
cd ~minetest/

git clone https://github.com/minetest/minetest

cd minetest/games

git clone https://github.com/minetest/minetest_game

cd ..

cmake -DRUN_IN_PLACE=1 -DBUILD_SERVER=1 -DENABLE_CURL=1 -DENABLE_CURSES=1

make -j "$NUMPROCESSORS"
# ------- do not leave C compiler lying around on a publicly accessible machine!
# what else?
sudo apt-get remove gcc

# add support for deploying an existing world file
# add support for building a mtmanage.conf
# add support for adding a systemd service file ?


cd ~minetest
chown minetest:minetest minetest
