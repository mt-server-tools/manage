#!/bin/bash

# The full backup/restore

MT_UDATA=/var/games/minetest-server/.minetest
MT_GDATA=/usr/share/games/minetest
MT_LDATA=/var/log/minetest
MT_CONF=/etc/minetest

if [[ -z "$*" ]]; then
cat <<EOHELP

Backup/restore the player data, game data, and logs

	$0 backup
	$0 restore ARCHIVE

EOHELP
exit
fi

if [[ "$1" = backup ]]; then
	aname="$(date "+%F-%T").tar.gz"
	tar czf "$aname" -C / "$MT_DATA" "$MT_GDATA" "$MT_LDATA" "$MT_CONF"
	echo "[1;33mData saved at $aname[0m"
elif [[ "$1" = restore ]]; then
	shift
	if [[ -z "$*" ]]; then
		echo "[1;31mPlease specify an archive file[0m"
		exit 1
	fi

	if [[ ! -f "$1" ]] || ! (tar tzf "$1"|grep "/var/games/minetest-server" -q); then
		echo "[1;31mNot a minetest backup directory[0m"
		exit 1
	fi

	"$0" backup # backup existing config just in case!
	set -e
	(cd "$MT_GDATA" ; rm -r ./* )
	(cd "$MT_UDATA" ; rm -r ./* )
	(cd "$MT_LDATA" ; rm -r ./* )
	(cd "$MT_CONF" ; rm -r ./* )

	tar xzf "$1" -C /
else
	echo "[1;31mInvalid option: $1[0m"
	exit 1
fi
